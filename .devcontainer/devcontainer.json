{
  "name": "Python 3",
  "image": "python:3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "trends/trends.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip install --upgrade pip && pip install -r trends/requirements.txt",
  "postCreateCommand": "pip install --upgrade pip && pip install -r trends/requirements.txt",
  "postAttachCommand": {
    "server": "streamlit run trends/trends.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
